@page "/poker"
@using ClassicGames.Engine
@using ClassicGames.Games

<PageTitle>Poker - 8080 Games</PageTitle>

<GameComponent GameTitle="Poker"
               Game="@gameEngine"
               OnRestart="@HandleRestart" />

@code {
    private GameEngine? gameEngine;

    protected override void OnInitialized()
    {
        CreateNewGame();
    }

    private void CreateNewGame()
    {
        gameEngine = PokerGame.CreateGame();
    }

    private void HandleRestart()
    {
        CreateNewGame();
        StateHasChanged();
    }
}
